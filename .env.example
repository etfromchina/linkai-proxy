# LinkAI API 配置
LINKAI_API_KEY=你的LinkAI_API_KEY
LINKAI_BASE_URL=https://api.link-ai.tech/v1

# 默认 APP Code（当模型没有匹配时使用）
LINKAI_APP_CODE=默认的AppCode

# ===== 模型到 APP Code 映射配置 =====
# 方式1: 使用单行格式 (逗号分隔的 key:value 对)
# 格式: MODEL_MAPPINGS=模型名:AppCode,模型名:AppCode
MODEL_MAPPINGS=gpt-4o:CM5Ex4OE,gpt-5-mini:jPzuwqKZ,claude-3-opus:ANOTHER_CODE

# 方式2: 使用单独的变量 (支持特殊字符)
# MODEL_MAP_gpt-4o=CM5Ex4OE
# MODEL_MAP_gpt-5-mini=jPzuwqKZ
# MODEL_MAP_claude-3-opus=ANOTHER_CODE

# ===== APP Code -> LinkAI API Key 映射（可选） =====
# APP_CODE_CM5Ex4OE=your_linkai_key_for_cm5
# APP_CODE_jPzuwqKZ=your_linkai_key_for_jpz

# ===== Memory Prompt 路由配置（v2.2 新增） =====
# 内存/事实抽取类 Prompt 自动切换到指定 APP Code
MEMORY_ROUTING_ENABLED=true
MEMORY_ROUTING_MIN_SCORE=2
MEMORY_ROUTING_DEBUG=false
MEMORY_MANAGER_APP_CODE=VBLtq5no
MEMORY_EXTRACTOR_APP_CODE=VBLtq5no

# ===== 本地服务配置 =====
LOCAL_API_KEY=sk-your-local-api-key
LOCAL_HOST=0.0.0.0
LOCAL_PORT=8000
